@page
@model Crud.Pages.Galery.EditModel
@{
}


<div class="col-xl-7 col-lg-12 d-flex bg-dark mr-auto ml-auto mt-3 formulario">
    <div class="container align-self-center p-6">
        <h1 class="font-weight-bold mb-3">Editar imagen</h1>

        <p class="text-muted mb-5">Ingresa la siguiente información para editar tu imagen</p>

        <form method="post" enctype="multipart/form-data" data-toggle="validator" role="form">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Galeria.Id" />

            <div class="form-group mb-3">
                <label class="font-weight-bold">Titulo de la imagen <span class="text-danger">*</span></label>
                <input asp-for="Galeria.Imgtitle" class="form-control" type="text" placeholder="Ingresa el titulo de la imagen" required />
                <span asp-validation-for="Galeria.Imgtitle" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label class="font-weight-bold">Archivo original</label>
                <input asp-for="Galeria.Imgname" class="form-control" readonly />
                <span asp-validation-for="Galeria.Imgname" class="text-danger"></span>
            </div>

            <div class="form-group mb-5">
                <p class="text-muted">Al subir una imagen aceptas que esta libre de derechos de autor</p>
            </div>
            <div class="form-group mb-3">
                <input type="file" name="uploadFiles" />
            </div>
            <input type="submit" value="Editar" class="btn btn-primary width-100" />

            <a asp-page="Index" class="btn btn-success width-100">Volver a la galeria</a>

        </form>
        <small class="d-inline-block text-muted mt-5">Todos los derechos reservados | © 2021 FreeIMG</small>
    </div>
</div>

@section Scripts{
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
